@model IEnumerable<CreaturesViewModel>
@{
    ViewData["Title"] = "Pokedex";
}

<h1>Pokedex</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <td>Dex Number</td>
            <td>Name</td>
            <td>Sprites</td>
            <td>Types</td>
            <td></td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var pokemon in Model)
        {
            <tr>
                <td>#@pokemon.DexNum</td>
                <td>@pokemon.Name</td>
                <td><img src="@pokemon.CreaturePic" /></td>
                <td>
                    @foreach (var type in pokemon.Types)
                    {

                        <img class="type" src="@type.TypePic" />
                        @*<td>@type.TypeName</td>*@
                    }
                </td>
                @*<td><i class="far fa-eye"></i></td>*@
                <td>
                    <a class="btn btn-info" asp-controller="Pokedex" asp-action="Details" asp-route-id="@pokemon.CreatureId" role="button">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>


