@model IEnumerable<CreaturesViewModel>
@{
    ViewData["Title"] = "Pokedex";
}

<h1>Pokedex</h1>
<a class="btn btn-info" asp-controller="Pokedex" asp-action="Add" role="button">Add</a>
<table class="table table-striped">
    
    <thead>
    <tr>
        <td>Dex Number</td>
        <td>Name</td>
        <td>Sprites</td>
        <td>Types</td>
        <td>Actions</td>
    </tr>
    </thead>
    <tbody>
    @foreach (var pokemon in Model)
    {
        <tr>
            <td>#@pokemon.DexNum</td>
            <td>@pokemon.Name</td>
            <td><img src="@pokemon.CreaturePic"/></td>
            <td>
                <div>
                    @foreach (var type in pokemon.Types)
                    {

                        <img style='height: 20%; width: 20%; max-width: 20%; max-height: 20%; object-fit: contain' src="@type.TypePic" />
                        @*<td>@type.TypeName</td>*@
                    }
                </div>
            </td>
            @*<td><i class="far fa-eye"></i></td>*@
            <td>
                <div>
                    <a class="btn btn-info" asp-controller="Pokedex" asp-action="Details" asp-route-id="@pokemon.CreatureId" role="button">Details</a>
                    <a class="btn btn-info" asp-controller="Pokedex" asp-action="Update" asp-route-id="@pokemon.CreatureId" role="button">Update</a>
                    <a class="btn btn-info" asp-controller="Pokedex" asp-action="Delete" asp-route-id="@pokemon.CreatureId" role="button">Delete</a>
                </div>

            </td>
        </tr>
    }
    </tbody>
</table>


